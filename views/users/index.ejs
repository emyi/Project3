<% include ../partials/header %>
<% if( curr_user ){ %>

<h1>logged in user: <%= curr_user %></h1>
<a href="/logout">Log Out</a>


<% } else { %>

	<a href="/new">Register</a> <a href="/login">Login</a>

<% } %>
<% if( users && users.length > 0) { %>
	<table>
		<tbody>
		<% for(var i=0; i < users.length; i++) { %>
		<tr>
		    <td><a href="player/<%= users[i].id %>">User<%= i+1 %>&nbsp; </a></td>
		    <td><%= users[i].id %></td>
		    <td><%= users[i].email %></td>
		</tr>
		<% } %>
		</tbody>
	</table>
<% } %>
