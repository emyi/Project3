<html>
<head>
  <title>Course</title>
  
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/course_show.css">
  
</head>
<body>
<% include ../partials/header.ejs %>

<div class="container">
	<% if( curr_user ){ %>
		<div id="top">
			<a href="/group/join/" id="join"> Create Group</a>
			<a id="currUser">logged in user: <%= curr_user_name %></a>
		</div>

		<div id="links">
			<button><a href="/users/<%= curr_user_id %>">My Profile</a></button>
			<button id="logout"><a href="/logout">Log Out</a></button>
		</div>
    <br/>
	<% } else { %>




  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" style="background-color: #FF6B00">Get Started</button>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content col-lg-10">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">x</button>
          </div>

          <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="#login" data-toggle="tab">Login</a></li>
            <li role="presentation"><a href="#register" data-toggle="tab">Register</a></li>
          </ul>
          <div class="tab-content">
          <div class="tab-pane active" id="login">  

            <h1>Log In</h1>

            <form id="redirectForm" action="/login_redirect/" method="post">
              <div class="form-group">
                <label name="title">Email</label>
                <input type="email" class="form-control" name="email" value="" placeholder="Email">
              </div>
              
              <div class="form-group">
                <label name="title">Password</label>
                <input type="password" class="form-control" name="password" value="" placeholder="Password">
              </div>
              
              <button type="submit" class="btn btn-default">Log In</button>
            </form>   
          </div>


	      <div class="tab-pane" id="register">  

	        <h1>New User</h1>


        <form action="/users/create" method="post">
          <div class="form-group">
            <label name="title">Name</label>
            <input type="text" class="form-control" name="name" placeholder="Name"/>
          </div>

          <div class="form-group">
            <label name="title">Email</label>
            <input type="email" class="form-control" name="email" placeholder="Email"/>
          </div>

          <div class="form-group">
            <label name="title">Password</label>
            <input type="password" class="form-control" name="password" placeholder="Password"/>
          </div>

          <div class="form-group">
            <label name="title">Location</label>
            <input type="text" class="form-control" name="location" placeholder="Location"/>
          </div>

          <div class="form-group">
            <label name="title">Handicap</label>
            <input type="text" class="form-control" name="handicap" placeholder="Handicap"/>
          </div>

          <button type="submit" class="btn btn-default">Sign Up</button>
        </form> 

      </div>    
    </div>
              </div>
            </div>
          </div>
<% } %>



	<div class="row">
	  <div class="col-xs-6 col-md-3">

	      <img src="<%= course.image_url %>" class="big-image">
	  </div>



	<!-- <h1><%= course.name %></h1>
	<img src="<%= course.rating_img_url_large %>" alt="...">
	<p>Address:<%= course.location.display_address %></p>

	<p>Phone Number:<%= course.display_phone %></p>
	<p><%= course.url %></p>
	<p><%= course.snippet_text %></p> -->




	<div id="courseInfo">
		<h1 id="courseName"><%= course.name %></h1>
		<img src="<%= course.rating_img_url_large %>" alt="...">
		<div id="specs">
			<p>18 Holes</p>
			<p>Par 72</p>
			<p>5478 Yards</p>
		</div>

		<div id="text">
			<p><%= course.snippet_text %></p>
		</div>
		<div id="contactInfo">
			<p id="address"><%= course.location.display_address %></p>
			<p id="phone"><%= course.display_phone %></p>
			<a href="<%= course.url %>" id="website"> Yelp</a>

		</div>
	  </div>

	</div>

	<!-- display different groups here -->
	<div id="groups">
		<% include ../partials/groups.ejs %>
	</div>
</div>



